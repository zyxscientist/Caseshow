.article
  margin: 0px 0px 10px 0px

.article-inner
  position: relative
  overflow: hidden
  margin-right: 20px
  padding-bottom: 11px
  max-height: 418px
  min-height: 418px
  //article box area shadow
  border: 1px solid color-border
  background: #fff
  -webkit-box-shadow: 0 1px 4px 0 rgba(0,0,0,0.14)
  -webkit-border-radius: 2px
  box-shadow: 0 1px 4px 0 rgba(0,0,0,0.14)
  z-index: 1
  @media mq-mobile
    width: auto
    margin: 0 auto 15px auto

div.article-inner:hover
  -webkit-box-shadow: 0 1px 20px 0 rgba(0,0,0,0.3)
  box-shadow: 0 1px 20px 0 rgba(0,0,0,0.3)


// this css is for the inner pages, the above one for the 
// entry box.
.article-inner-pages
  position: relative
  letter-spacing: 0em;
  float: left
  margin-bottom: 15px 
  width: auto
  @media mq-mobile
    width: auto

.article-meta
  clearfix()
  a
    text-decoration: none

.article-date
  color: color-grey
  float: left
  margin-left: 10px


.article-date-page
  color: color-grey
  padding: 0 0px 0px 150px
  @media mq-mobile
    padding: 0 0px 0 20px

.article-category
  float: left
  margin-left: 8px
  color: color-grey
  &:before
    content: "\2022"
  span
    margin-left: 8px

.article-category-link
  margin-left: 8px

.article-comment-link-wrap
  float: left
  margin-left: 8px
  color: color-grey
  &:before
    content: "\2022"

.article-comment-link
  margin-left: 8px

.article-header
  margin-top: 15px
  margin-bottom: 10px
  margin-left: 10px


.article-header-pages
  margin-bottom: 10px

.article-title
  font-size: 2em
  font-weight: 400
  line-height: line-height-title
a.article-title
  @extend $link
  color: #332

.article-title-pages
  color: #332
  font-size: 2.5em
  font-weight: 400
  line-height: line-height-title
  padding: 0 150px 0 150px
  @media mq-mobile
    font-size: 1.8em
    padding: 0 20px 0 20px
a.article-title
  @extend $link
  color: #332

.article-entry
  @extend $base-style
  clearfix()
  max-height: 108px
  min-height: 108px
  color: color-default
  padding: 0
  p, table
    line-height: line-height
    margin: 0.7em 0
    padding: 0px 10px 0 10px
    color: #5F5F5F
    font-size: 14px;
    line-height: 1.72
  h1, h2, h3, h4, h5, h6
    font-weight: 600
    line-height: 1.5em
    margin: line-height-title 0
  a
    @extend $link-highlight
  ul, ol, dl
    margin-top: line-height
    margin-bottom: line-height
  img, video
    max-width: 100%
    height: auto
    display: block
    margin: auto
  iframe
    border: none
  table
    width: 100%
    border-collapse: collapse
    border-spacing: 0
  th
    font-weight: 600
    border-bottom: 3px solid color-border
    padding-bottom: 0.5em
  td
    border-bottom: 1px solid color-border
    padding: 10px 0
  blockquote
    font-family: font-default
    font-size: 1.5em
    margin: line-height 20px
    text-align: center
    footer
      font-size: font-size
      margin: line-height 0
      font-family: font-sans
      cite
        &:before
          content: "—"
          padding: 0 0.5em
  .pullquote
    text-align: left
    width: 45%
    margin: 0
    &.left
      margin-left: 0.5em
      margin-right: 1em
    &.right
      margin-right: 0.5em
      margin-left: 1em
  .caption
    color: color-grey
    display: block
    font-size: 0.9em
    margin-top: 0.5em
    position: relative
    text-align: center
  // http://webdesignerwall.com/tutorials/css-elastic-videos
  .video-container
    position: relative
    padding-top: (9 / 16 * 100)% // 16:9 ratio
    height: 0
    overflow: hidden
    iframe, object, embed
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 100%
      margin-top: 0

